<android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="false"
    app:contentPaddingTop="0dp"
    app:cardBackgroundColor="@color/md_blue_100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/imgFotoCarro"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/vyron"/>

        <TextView
            android:id="@+id/txtvNome"
            android:layout_below="@+id/imgFotoCarro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@null"
            android:paddingLeft="16dp"
            android:paddingTop="24dp"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txtvMarca"
            android:layout_below="@+id/txtvNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingBottom="24dp"
            android:textSize="14sp"
            android:text="@null"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp">
            <Button
                android:id="@+id/btnFone"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@drawable/botao_padrao"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Telefone"
                android:textColor="@color/corPrimaria"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>