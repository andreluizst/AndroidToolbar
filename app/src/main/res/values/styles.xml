<resources>

    <!-- Base application theme. -->
    <!--style name="AppTheme" parent="Theme.AppCompat.NoActionBar">-->
    <style name="AppTheme" parent="MaterialDrawerTheme.Light.DarkToolbar">

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_icons">@android:color/transparent</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/blue</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/corPrimaria</item>
        <item name="material_drawer_selected_text">@color/white</item>
        <item name="material_drawer_header_selection_text">@color/white</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/corPrimaria</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/corPrimariaEscura</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/corDestaque</item>



        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
        <item name="@android:colorControlNormal">@color/white</item>

        <item name="android:windowBackground">@color/white</item>

    </style>

    <style name="AppTheme.Toolbar.Footer" parent="AppTheme">
        <!--item name="colorPrimary">@color/gray_light</item-->
        <item name="background">@color/gray</item>
    </style>

    <style name="AppTheme.PopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="AppTheme.ThemeOverlay.AppCompat.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">@color/red</item>
        <item name="android:textColorPrimary">@color/yellow</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/blue_deep</item>
    </style>

</resources>
